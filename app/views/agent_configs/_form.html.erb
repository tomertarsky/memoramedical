<%= form_with(model: agent_config, class: "contents") do |form| %>
  <% if agent_config.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(agent_config.errors.count, "error") %> prohibited this agent_config from being saved:</h2>

      <ul class="list-disc ml-6">
        <% agent_config.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :prompt, "Agent Prompt", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <p class="text-sm text-gray-500 mb-2">Define what the AI agent should say and how it should behave during conversations.</p>
    <%= form.textarea :prompt, rows: 6, placeholder: "You are a helpful medical assistant for Memora Medical Devices. You help seniors and their families understand our AI companion devices...", class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": agent_config.errors[:prompt].none?, "border-red-400 focus:outline-red-600": agent_config.errors[:prompt].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :speech_speed, "Speech Speed (0.5 - 2.0)", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <p class="text-sm text-gray-500 mb-2">Control how fast the AI speaks. 1.0 is normal speed, lower values are slower, higher values are faster.</p>
    <%= form.number_field :speech_speed, step: 0.1, min: 0.5, max: 2.0, placeholder: "1.0", class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": agent_config.errors[:speech_speed].none?, "border-red-400 focus:outline-red-600": agent_config.errors[:speech_speed].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit "Update AI Agent", class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-indigo-600 hover:bg-indigo-500 text-white inline-block font-medium cursor-pointer transition duration-200" %>
  </div>
<% end %>
