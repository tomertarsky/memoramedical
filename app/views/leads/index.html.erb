<!-- Hero Section -->
<% content_for :title, "Memora Medical Devices - AI Companion for Seniors with Dementia" %>
<% content_for :description, "Innovative AI-powered companion devices designed to bring comfort, reduce anxiety, and improve quality of life for seniors living with dementia." %>
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-start justify-center px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="lg:grid lg:grid-cols-12 lg:gap-8 items-start pt-8 lg:pt-20">
      <!-- Header with Research Link -->
      <div class="col-span-12 flex justify-between items-center mb-8">
        <div class="flex items-center">
          <div class="w-12 h-12 bg-indigo-600 rounded-xl flex items-center justify-center mr-3">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-gray-900">Memora Medical Devices</h1>
        </div>
        <%= link_to "Our Research", research_path, class: "text-indigo-600 hover:text-indigo-700 font-medium text-lg" %>
      </div>

      <!-- Content -->
      <div class="lg:col-span-6">
        <div class="text-center lg:text-left">


          <!-- Headline -->
          <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
            Bringing <span class="text-indigo-600">Joy</span> and <span class="text-indigo-600">Comfort</span> to Seniors with Dementia
          </h2>

          <!-- Subheadline -->
          <p class="text-xl text-gray-600 mb-8 leading-relaxed">
            Our innovative companion devices combine advanced technology with compassionate design to provide meaningful interactions, reduce anxiety, and improve quality of life for those living with dementia.
          </p>

          <!-- Key Benefits -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-indigo-600 rounded-full mr-3"></div>
              <span class="text-gray-700">Reduces anxiety and agitation</span>
            </div>
            <div class="flex items-center">
              <div class="w-3 h-3 bg-indigo-600 rounded-full mr-3"></div>
              <span class="text-gray-700">Stimulates memory and cognition</span>
            </div>
            <div class="flex items-center">
              <div class="w-3 h-3 bg-indigo-600 rounded-full mr-3"></div>
              <span class="text-gray-700">Easy-to-use interface</span>
            </div>
            <div class="flex items-center">
              <div class="w-3 h-3 bg-indigo-600 rounded-full mr-3"></div>
              <span class="text-gray-700">24/7 companionship</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Lead Capture Form -->
      <div class="mt-8 lg:mt-0 lg:col-span-6">
        <div class="bg-white rounded-2xl shadow-xl p-8 lg:p-12">
          <div class="text-center mb-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Be the First to Know</h3>
            <p class="text-gray-600">Get early access and updates on our AI powered companion device.</p>
          </div>

          <%= form_with model: @lead, local: true, class: "space-y-6" do |form| %>
            <div>
              <%= form.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.email_field :email,
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200 ease-in-out #{'border-red-500 ring-red-500' if @lead.errors[:email].any?}",
                  placeholder: "your.email@example.com",
                  required: true %>
              <% if @lead.errors[:email].any? %>
                <p class="mt-2 text-sm text-red-600">
                  <%= @lead.errors[:email].first %>
                </p>
              <% end %>
            </div>

            <%= form.submit "Join Our Early Access List",
                class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
          <% end %>

          <!-- Calendly Integration -->
          <div class="mt-6 pt-6 border-t border-gray-200 text-center">
            <h4 class="text-lg font-semibold text-gray-900 mb-3">Schedule a Demo</h4>
            <p class="text-gray-600 mb-4">Ready to see our device in action? Book a meeting with our founder.</p>

            <!-- Calendly link widget begin -->
            <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
            <script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript" async></script>
            <a href=""
               onclick="Calendly.initPopupWidget({url: 'https://calendly.com/tomer-tarsky/meeting-with-founder'});return false;"
               class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition duration-200">
              Schedule time our founder
            </a>
            <!-- Calendly link widget end -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- Calendly Script -->
<script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
